<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Fecha del pedido -->
    <TextView
        android:id="@+id/txtFechaPedido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fecha: 10/11/2024"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btnVerCarrito"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Monto total -->
    <TextView
        android:id="@+id/txtMontoTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monto: $1234"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtFechaPedido" />

    <!-- Botón para ver los productos del carrito -->
    <Button
        android:id="@+id/btnVerCarrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#009205"
        android:text="Ver productos"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@+id/btnAccionPedido"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón para editar el pedido #9F0707-->
    <Button
        android:id="@+id/btnAccionPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFA000"
        android:text="Editar"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

